<!DOCTYPE HTML>
<html>
<head>
    <title>Change</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
<!--    <script src="script.js" type="text/javascript"></script>-->
    <script src="modal.js" type="text/javascript" defer></script>
    <link rel="stylesheet" href="modal.css">
</head>
<body>
<form action="/" method="get">
    <button type="submit">HOME</button>
</form>
<div>
    <form method="post">
        <table>
            <tr>
                <th>Channel</th>
                <th>New frequency</th>
                <th>New polarization value</th>
            </tr>
            <tr>
                <td>
                    <select name="channel">
<!--                        <option>...</option>-->
                        {{#channels}}
                            <option>{{name}}</option>
                        {{/channels}}
                    </select>
                </td>
                <td>
                    <input name="frequency" placeholder="0.00">
                </td>
                <td>
                    <input name="polarization" placeholder="0.00">
                </td>
            </tr>
            <tr>
                <th>
<!--                    <input type="checkbox" name="save">-->
<!--                    <label for="save">Save</label>-->
                </th>
                <td>

                </td>
                <td>
                    <button type="submit">SAVE</button>
                </td>
            </tr>
        </table>
    </form>
</div>
<!-- Trigger/Open The Modal -->
<button id="myBtn">Open Modal</button>
<!--HIDDEN FIELD TO DEFINE PAGE STATUS-->
<div id="status" hidden="true">
    {{status}}
</div>

<!--MODAL WINDOW DESCRIPTION-->
<div id="myModal" class="modal">
    <!-- Modal content -->
    <div class="modalContent" id="modalContent">
        <span class="close">&times;</span>
        <p id="modalText">Some text in the Modal..</p>
    </div>
</div>

<!--LOGS TABLE IS NOT NECESSARY-->
<div hidden="true">
    <table>
        <tr>
            <th>Id</th>
            <th>Channel</th>
            <th>Frequency</th>
            <th>Polarization</th>
            <th>Satellites</th>
        </tr>
        {{#channels}}
            <tr>
                <td>{{id}}</td>
                <td>{{name}}</td>
                <td>{{frequency}}</td>
                <td>{{polarizaionValue}}</td>
                <td>
                    {{#satellites}}
                        {{name}}.
                    {{/satellites}}
                </td>
            </tr>
        {{/channels}}
    </table>
</div>
</body>
</html>